@Library('pipeline-library') _

pipeline {
    agent {
        kubernetes {
            label "hydra-infra"
            defaultContainer "hydra-infra-dind"
            yaml libraryResource("agents/k8s/hydra-infra.yaml")
        }
    }


    stages {
        stage("Install dependencies via npm") {
            environment {
                // Need full path of current workspace for setting path of nvm on $PATH
                WORKSPACE = pwd()
            }
            steps {
                script {
                    sh """
                    aws --version
                    """
                }
            }
        }
    }
}
