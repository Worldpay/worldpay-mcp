{
  "name": "worldpay-mcp",
  "version": "1.0.0",
  "description": "MCP server for building Payment Page using Worldpay Checkout",
  "main": "server-sse.js",
  "type": "module",
  "scripts": {
    "build": "tsc && mkdir -p dist/templates && cp -r templates/* dist/templates/",
    "start": "node dist/server-http.js",
    "dev": "tsc && node dist/server-http.js",
    "test": "vitest"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.15.1",
    "dotenv": "^16.4.7",
    "express": "^5.0.1",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.6",
    "typescript": "^5.7.3",
    "vite-plugin-environment": "^1.1.3",
    "vitest": "^3.2.4"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  }
}
