{
  "name": "@worldpay/worldpay-mcp",
  "version": "1.0.0",
  "description": "Worldpay MCP Server",
  "main": "server-http.js",
  "type": "module",
  "files": [
    "dist/**/*"
  ],
  "bin": "dist/server-http.js",
  "scripts": {
